# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

GET   /csrf-token   controllers.HomeController.getCsrfToken()

POST    /update-username    controllers.HomeController.updateUsername()
GET     /get-username       controllers.HomeController.getUsername()


GET     /get-lobby-count    controllers.HomeController.getLobbyCount()

GET     /                   controllers.Assets.at(path="/ui", file="index.html")
POST    /lobby              controllers.HomeController.createLobby
GET     /lobby/:lobbyId     controllers.HomeController.lobby(lobbyId: String)

POST    /board/render       controllers.GameController.renderBoard()
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)