# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index()
GET     /rules                      controllers.HomeController.rules
GET     /undo                       controllers.HomeController.undo()

# AJAX API
POST    /api/undo                   controllers.HomeController.undo
POST    /api/setBoardSize/:size     controllers.HomeController.setBoardSize(size: String)
POST    /api/move                   controllers.HomeController.move
POST    /api/hints                  controllers.HomeController.hints
POST    /api/bearIn                 controllers.HomeController.bearIn

GET     /move                       controllers.HomeController.move(from: String, to: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
